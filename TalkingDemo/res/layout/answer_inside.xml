<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_login_bg"     >
    
    <TextView
        android:id="@+id/AI_Title_Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_login_div"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFFFF"
        android:textSize="20dp"
      
         />
    
    
    <TextView
        android:id="@+id/AI_questionContent_Tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"    
        android:layout_below="@id/AI_Title_Tv"    
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_login_div"
        android:textColor="#FFFFFFFF"
        android:textSize="20dp"     />
    
      
    
         <Button 
             android:id="@+id/AI_addAnswer_Bt"
             android:layout_marginTop="10dp"
             android:layout_below="@id/AI_questionContent_Tv"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerHorizontal="true"
             android:text="    Post New Answer   "
             android:background="@drawable/shape_login_div"            
             android:textSize="20dp"
             />
         
         <LinearLayout 
             android:id="@+id/AI_Middle_Ll"
             android:layout_below="@id/AI_addAnswer_Bt"
             android:layout_width="fill_parent"
             android:layout_height="match_parent"
             android:orientation="horizontal"
             >
         <RelativeLayout 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@drawable/shape_login_div"
                 android:textSize="20dp"
             >
         <ImageView 
             android:id="@+id/AI_userAvatar_Iv"
             android:layout_width="50dp"
             android:layout_height="50dp"
             android:layout_alignParentLeft="true"
             android:src="@drawable/robot"
             
             />
         
         <TextView 
             android:id="@+id/AI_userName_Tv"
             android:layout_width="50dp"
             android:layout_height="wrap_content"
             android:layout_below="@id/AI_userAvatar_Iv"
             android:text=" a fake user "
             android:textColor="#FFFFFFFF"
                 android:textSize="20dp"
             />
             
           </RelativeLayout>
             
         <TextView
         android:id="@+id/AI_answerContent_Tv"
         android:layout_width="match_parent"
         android:layout_height="fill_parent"
         android:text=""
         android:layout_marginLeft="15dp"
         android:layout_marginTop="10dp"
         android:layout_marginRight="10dp"
         android:textColor="#FFFFFFFF"
         android:background="#00000000"
            android:textSize="20dp"
         />
          
             
         </LinearLayout>
       
           
        
     <RelativeLayout 
         android:id="@+id/AI_Bottom_Ly"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         
         >
       <Button
           android:id="@+id/AI_Previous_Bt"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:text=" Previous "
           android:textSize="20dp"
           android:background="@drawable/shape_login_div"
            />
       <Button 
           android:id="@+id/AI_Commence_Bt"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:text=" Commence "
           android:textSize="20dp"
           android:background="@drawable/shape_login_div"
           />
       
       <Button 
           android:id="@+id/AI_Next_Bt"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:text="  The Next   "
           android:textSize="20dp"
           android:background="@drawable/shape_login_div"
           />
                
     </RelativeLayout>
        
        
   

</RelativeLayout>
