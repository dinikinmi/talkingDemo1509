<?xml version="1.0" encoding="utf-8"?>

    
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ll_itemLinLay_rcli"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_login_bg"
        android:orientation="horizontal"  >
 
     <ImageView
         android:id="@+id/iv_avatar_rcli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:padding="8dp"
            android:src="@drawable/btn_selectcontact_big" />
     <!-- this is the conatactor's avatar -->   
 	<TextView
  		android:id="@+id/tv_name_rcli"
  		android:background="@drawable/shape_login_div"
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content" 
  		android:layout_marginTop="14dp" 
  		style="@style/MainWinElvGroupTitleText"  />
 	
 	<TextView
 	    android:id="@+id/tv_role_rctl"
 	    android:layout_width="wrap_content" 
 	    android:layout_height="wrap_content"
 	    android:layout_marginTop="14dp"
 	    android:background="#EE0011"
 	    style="@style/MainWinElvGroupTitleText"/>
 
 	<TextView 
 	    android:id="@+id/tv_unreaadLabel_rcli"
 	    android:background="@drawable/shape_login_div"
 	    android:layout_width="wrap_content" 
 	    android:layout_height="wrap_content"
 	    android:layout_marginTop="14dp"
 	    android:layout_marginLeft="50dp"
 	    android:text="Unread Message"
 	    android:textColor="#FF0000" />

</LinearLayout>