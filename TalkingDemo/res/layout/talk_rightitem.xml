<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/talkright_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" />

    <ImageView
        android:id="@+id/talkright_iv"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/talkright_time"
        android:padding="10dp"
        android:src="@drawable/visitor" 
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/talkright_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/talkright_time"
        android:layout_marginLeft="40dp"
        android:layout_toLeftOf="@id/talkright_iv"
        android:paddingLeft="15dp"
        android:paddingRight="25dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/aio_user_bg_nor_11"
        android:textColor="#FF000000"
        android:textSize="18sp"
        android:gravity="center" />
    
    
    
        <TextView
        android:id="@+id/status_tv"
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:textColor="#FF000000"
        android:textSize="6sp"
        android:layout_toLeftOf="@id/talkright_tv"
        android:layout_centerVertical="true"
         />

</RelativeLayout>